# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=spirit_guide_pricing
DB_USER=postgres
DB_PASSWORD=your_password_here
DATABASE_URL=postgresql://postgres:your_password_here@localhost:5432/spirit_guide_pricing

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379

# Server Configuration
PORT=3001
NODE_ENV=development
API_KEY=your_api_key_here
JWT_SECRET=your_jwt_secret_here

# Scraping Configuration
SCRAPING_DELAY=2000
MAX_CONCURRENT_SCRAPERS=3
PROXY_ROTATION_ENABLED=true
USER_AGENT_ROTATION_ENABLED=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cron Jobs
PRICE_UPDATE_CRON=0 2 * * *  # Daily at 2 AM
BACKUP_CRON=0 3 * * 0        # Weekly on Sunday at 3 AM
CLEANUP_CRON=0 4 * * *       # Daily at 4 AM

# External APIs (if needed)
LIQUOR_API_KEY=your_liquor_api_key
TAX_API_KEY=your_tax_api_key

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Monitoring
SENTRY_DSN=your_sentry_dsn_here
HEALTH_CHECK_ENABLED=true
